{
    "name": "express-static-website",
    "version": 2,
    "public": true,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        { "src": "/", "dest": "/public/index.html" },
        {
            "src": "/(.+\\.[a-z]+)$",
            "dest": "/public/$1"
        }
    ]
}
